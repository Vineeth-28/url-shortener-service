{
  "compilerOptions": {
    /* Output */
    "target": "ESNext",                    /* Modern JS output */
    "module": "ESNext",                    /* Rollup requires ESM */
    "outDir": "./dist",                    /* Compiled files */
    "declaration": true,                   /* Generate .d.ts files */
    "declarationDir": "./dist/types",      /* Place .d.ts separately */
    "sourceMap": true,                     /* Useful for debugging */

    /* Module resolution */
    "moduleResolution": "node",            /* Node.js style resolution */
    "esModuleInterop": true,               /* Allow CommonJS imports */
    "allowSyntheticDefaultImports": true,  /* Interop with CJS/ESM */
    "resolveJsonModule": true,             /* Import .json files */
    "importHelpers": true,                 /* Reuse helpers from tslib */

    /* Strictness */
    "strict": true,                        /* Enable strict mode */
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,

    /* Performance */
    "skipLibCheck": true                   /* Skip .d.ts type checks */
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
